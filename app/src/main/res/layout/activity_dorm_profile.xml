<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dorm_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:fitsSystemWindows="true"
    android:paddingBottom="24dp"
    tools:context=".ui.dorms.DormProfile">

    <ImageView
        android:id="@+id/dormLabel"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_image"
        android:scaleType="centerCrop"
        android:src="@drawable/wp_linux"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintBottom_toBottomOf="@+id/dormLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dormLabel"
        app:layout_constraintTop_toTopOf="@+id/dormLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>