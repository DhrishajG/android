<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    tools:context=".ui.messaging.ProfileMessaging">

    <RelativeLayout
        android:id="@+id/profile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:paddingTop="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/wp_linux"
            android:transitionName="image"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="4dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/profile_name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:transitionName="username" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/user_profile_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:id="@+id/user_feed_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fitsSystemWindows="true"
            android:background="@drawable/gradient_list"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/post_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/action_cards"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:transitionName="messaging_transition"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/no_messages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="0.0"
                            android:background="@drawable/message_bubble"
                            android:clipToPadding="false"
                            android:elevation="4dp"
                            android:padding="8dp"
                            android:text="@string/empty_chatroom" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="6dp"
                            android:background="@drawable/message_bubble"
                            android:elevation="4dp"
                            android:padding="5dp"
                            android:text="@string/chatroom"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/messageList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="44dp"
                            android:background="@drawable/custom_relativelayout"
                            android:clipChildren="true"
                            android:layoutAnimation="@anim/layout_topic_cards_animation"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:scrollbars="none" />

                        <LinearLayout
                            android:id="@+id/layout_chatbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="6dp"
                            android:minHeight="48dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edittext_chatbox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/message_bubble"
                                android:hint="@string/message_prompt"
                                android:importantForAutofill="no"
                                android:inputType="textCapSentences"
                                android:maxLines="10"
                                android:padding="8dp" />

                            <ImageButton
                                android:id="@+id/button_chatbox_send"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="bottom"
                                android:background="@drawable/circle"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:onClick="sendMessage"
                                android:src="@drawable/ic_reply_white_24dp"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>